# Development Environment Overrides
# Only contains values that differ from base .env

# Environment identifier
NODE_ENV=development

# Development-specific settings
DEBUG=true
LOG_LEVEL=debug
ENABLE_PERFORMANCE_MONITORING=true

# Development API (local or dev server)
API_BASE_URL=http://localhost:8080/api
API_TIMEOUT=30000
API_KEY=dev-api-key-12345
API_VERSION=v1

# Development features
ENABLE_HOT_RELOAD=true
ENABLE_SOURCE_MAPS=true
MINIFY_OUTPUT=false

# Development-only features
FEATURE_BETA_FEATURES=true
FEATURE_ADVANCED_DEBUGGING=true
FEATURE_CONFIG_UPDATES=true

# Relaxed security for development
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173
ENABLE_CSRF_PROTECTION=false
HTTPS_ENFORCE=false

# Development caching settings
CACHE_TTL=300000
CACHE_MAX_SIZE=100
CACHE_STRATEGY=memory

# Development logging
LOG_CONSOLE=true
LOG_REMOTE_ENABLED=false
SHOW_STACK_TRACE=true
ERROR_REPORTING_ENABLED=false

# Development UI
CUSTOM_THEME=dark
CUSTOM_WELCOME_MESSAGE="Welcome to ControllerTS Development!"
CUSTOM_MAX_UPLOAD_SIZE=10485760
