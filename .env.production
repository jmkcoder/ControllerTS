# Production Environment Overrides
# Only contains values that differ from base .env

# Environment identifier
NODE_ENV=production

# Production settings (security focused)
DEBUG=false
LOG_LEVEL=warn
ENABLE_PERFORMANCE_MONITORING=true

# Production API settings
API_BASE_URL=https://api.example.com/api
API_TIMEOUT=30000
API_KEY=prod-api-key-secret
API_VERSION=v1

# Production features (stable only)
FEATURE_ANALYTICS=true
FEATURE_SERVICE_WORKER=true
FEATURE_OFFLINE_MODE=true
FEATURE_BETA_FEATURES=false
FEATURE_ADVANCED_DEBUGGING=false

# Production security (maximum)
CORS_ORIGINS=https://example.com
ENABLE_CSRF_PROTECTION=true
CSP_ENABLED=true
HTTPS_ENFORCE=true
HSTS_ENABLED=true

# Production caching (aggressive)
CACHE_TTL=3600000
CACHE_MAX_SIZE=500
CACHE_STRATEGY=localStorage

# Production logging
LOG_CONSOLE=false
LOG_REMOTE_ENABLED=true
LOG_REMOTE_ENDPOINT=https://logs.example.com/api/logs
LOG_REMOTE_API_KEY=prod-logs-key-secret

# Production error handling
SHOW_STACK_TRACE=false
ERROR_REPORTING_ENABLED=true
ERROR_REPORTING_SERVICE=sentry
ERROR_REPORTING_DSN=https://xyz789@sentry.io/project-prod

# Production build settings (optimized)
ENABLE_SOURCE_MAPS=false
MINIFY_OUTPUT=true
TREE_SHAKING=true
ENABLE_COMPRESSION=true

# Production UI
CUSTOM_THEME=light
CUSTOM_WELCOME_MESSAGE="Welcome to ControllerTS!"
CUSTOM_MAX_UPLOAD_SIZE=104857600

# Production performance
BASE_URL=https://example.com
PORT=443
