{% extends "shared/_base.njk" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-16">
  <!-- Hero Section -->
  <section class="text-center mb-20">
    <div class="space-y-6">
      <h1 class="text-5xl md:text-6xl font-bold tracking-tight">{{ title }}</h1>
      <p class="text-xl text-muted-foreground max-w-3xl mx-auto leading-relaxed flex items-center justify-center gap-2">
        <span class="material-icons text-2xl">sports_esports</span>
        Interactive demonstration of ControllerTS framework capabilities - explore, test, and experience the power of modern web development.
      </p>
      <div class="flex justify-center gap-4 flex-wrap">
        <span class="px-4 py-2 bg-green-100 text-green-800 rounded-full text-sm font-medium flex items-center gap-2">
          <span class="material-icons text-lg">check_circle</span>
          Live Demo
        </span>
        <span class="px-4 py-2 bg-blue-100 text-blue-800 rounded-full text-sm font-medium flex items-center gap-2">
          <span class="material-icons text-lg">rocket_launch</span>
          Interactive
        </span>
        <span class="px-4 py-2 bg-purple-100 text-purple-800 rounded-full text-sm font-medium flex items-center gap-2">
          <span class="material-icons text-lg">flash_on</span>
          Real-time
        </span>
      </div>
    </div>
  </section>

  <!-- Framework Information -->
  <div class="rounded-2xl border bg-card shadow-sm overflow-hidden mb-12" data-animate="animate-slide-in-left">
    <div class="border-b border-border bg-muted/50 px-6 py-4">
      <h2 class="text-2xl font-semibold flex items-center gap-3">
        <span class="material-icons text-primary icon-lg">construction</span>
        Framework Information
      </h2>
      <p class="text-muted-foreground mt-2">Core details about the ControllerTS framework powering this demo</p>
    </div>
    
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="p-6 bg-muted/30 rounded-xl border border-border hover:shadow-md transition-all transform hover:scale-105">
          <div class="mb-3 flex items-center justify-center">
            <span class="material-icons text-4xl text-primary">construction</span>
          </div>
          <div class="font-bold text-lg text-foreground">Framework</div>
          <div class="text-muted-foreground mt-1">{{ demoData.framework }}</div>
        </div>
        <div class="p-6 bg-muted/30 rounded-xl border border-border hover:shadow-md transition-all transform hover:scale-105">
          <div class="mb-3 flex items-center justify-center">
            <span class="material-icons text-4xl text-primary">tag</span>
          </div>
          <div class="font-bold text-lg text-foreground">Version</div>
          <div class="text-muted-foreground mt-1">{{ demoData.version }}</div>
        </div>
        <div class="p-6 bg-muted/30 rounded-xl border border-border hover:shadow-md transition-all transform hover:scale-105">
          <div class="mb-3 flex items-center justify-center">
            <span class="material-icons text-4xl text-primary">person</span>
          </div>
          <div class="font-bold text-lg text-foreground">Author</div>
          <div class="text-muted-foreground mt-1">{{ demoData.author }}</div>
        </div>
        <div class="p-6 bg-muted/30 rounded-xl border border-border hover:shadow-md transition-all transform hover:scale-105">
          <div class="mb-3 flex items-center justify-center">
            <span class="material-icons text-4xl text-primary">schedule</span>
          </div>
          <div class="font-bold text-lg text-foreground">Generated</div>
          <div class="text-muted-foreground mt-1">{{ demoData.timestamp }}</div>
        </div>
      </div>
    </div>
  </div>

  <!-- Technology Stack -->
  <div class="rounded-2xl border bg-card shadow-sm overflow-hidden mb-12" data-animate="animate-slide-in-right">
    <div class="border-b border-border bg-muted/50 px-6 py-4">
      <h2 class="text-2xl font-semibold flex items-center gap-3">
        <span class="material-icons text-primary icon-lg">build</span>
        Technology Stack
      </h2>
      <p class="text-muted-foreground mt-2">Modern technologies powering this TypeScript MVC framework</p>
    </div>
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for tech in demoData.technologies %}
        <div class="flex items-center p-4 bg-muted/30 border border-border rounded-xl hover:bg-muted/50 hover:shadow-md transition-all transform hover:scale-105">
          <div class="w-3 h-3 bg-primary rounded-full mr-4 animate-pulse"></div>
          <span class="font-semibold text-foreground">{{ tech }}</span>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>

  <!-- Interactive Demos -->
  <section class="space-y-8">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold mb-4">Interactive Demos</h2>
      <p class="text-lg text-muted-foreground">Test the framework features live in your browser</p>
    </div>

    <!-- API Demo -->
    <div class="rounded-2xl border bg-card shadow-sm overflow-hidden">
      <div class="border-b border-border bg-muted/50 px-6 py-4">
        <h3 class="text-xl font-semibold flex items-center gap-3">
          <span class="material-icons text-primary icon-lg">api</span>
          API Endpoint Demo
        </h3>
      </div>
      <div class="p-6">
        <p class="text-muted-foreground mb-6 leading-relaxed">
          Test our REST API endpoints with real-time data fetching. Click the button below to retrieve live statistics from the server.
        </p>

        <div class="mt-6 p-6 bg-muted/30 rounded-xl border border-border mb-6">
          <div class="flex items-center gap-2 mb-3">
            <span class="material-icons text-blue-500 text-xl">info</span>
            <h4 class="font-semibold text-lg">API Information:</h4>
          </div>
          <p class="text-sm text-muted-foreground">
            This endpoint demonstrates RESTful API capabilities with JSON responses, 
            proper HTTP status codes, and structured data formatting. Click the button above to see it in action!
          </p>
        </div>

        <button 
          mvc-controller="home" 
          mvc-action="getStats" 
          mvc-result-target="api-result" 
          mvc-loading-text="<span class='material-icons mr-2 icon-sm animate-spin'>refresh</span>Fetching..."
          mvc-success-template='<div class="mt-6 p-6 bg-green-50 border-2 border-green-200 rounded-xl"><div class="flex items-center gap-3 mb-4"><span class="material-icons text-green-500 text-2xl">check_circle</span><h4 class="font-semibold text-lg text-green-800">API Response Received!</h4></div><div class="bg-white p-4 rounded-lg border border-green-300"><pre class="text-sm overflow-auto">@result</pre></div></div>'
          mvc-error-template='<div class="mt-6 p-6 bg-red-50 border-2 border-red-200 rounded-xl"><div class="flex items-center gap-3"><span class="material-icons text-red-500 text-2xl">error</span><div><strong class="text-red-800 text-lg">API Error</strong><p class="text-red-700 mt-1">@error</p></div></div></div>'
          class="inline-flex items-center justify-center rounded-xl bg-primary px-6 py-3 text-sm font-medium text-primary-foreground shadow-lg transition-all duration-300 hover:bg-primary/90 hover:scale-105 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring disabled:opacity-50 disabled:cursor-not-allowed"
        >
          <span class="material-icons mr-2 icon-sm">rocket_launch</span>
          Fetch Live Stats
        </button>
        
        <!-- API Result Display Area -->
        <div id="api-result" style=""></div>
      </div>
    </div>

    <!-- Form Demo -->
    <div class="rounded-2xl border bg-card shadow-sm overflow-hidden">
      <div class="border-b border-border bg-muted/50 px-6 py-4">
        <h3 class="text-xl font-semibold flex items-center gap-3">
          <span class="material-icons text-primary icon-lg">edit_note</span>
          Form Handling Demo
        </h3>
      </div>
      <div class="p-6">
        <p class="text-muted-foreground mb-6 leading-relaxed">
          Experience our form validation and submission system with real-time feedback and error handling.
        </p>
        <form action="/home/submitDemo" method="POST" class="space-y-6">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="space-y-2">
              <label for="name" class="text-sm font-medium flex items-center gap-2">
                <span class="material-icons text-muted-foreground icon-sm">person</span>
                Full Name *
              </label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                value="{{ formData.name or '' }}" 
                class="flex h-12 w-full rounded-xl border border-input bg-background px-4 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2{% if modelState and modelState.hasError('name') %} border-red-500 focus-visible:ring-red-500{% endif %}" 
                placeholder="Enter your full name"
              >
              {% if modelState and modelState.hasError('name') %}
              <div class="text-red-600 text-sm flex items-center gap-2">
                <span class="material-icons text-red-500 icon-sm">error</span>
                {{ modelState.getError('name') }}
              </div>
              {% endif %}
            </div>
            <div class="space-y-2">
              <label for="email" class="text-sm font-medium flex items-center gap-2">
                <span class="material-icons text-muted-foreground icon-sm">email</span>
                Email Address *
              </label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                value="{{ formData.email or '' }}" 
                class="flex h-12 w-full rounded-xl border border-input bg-background px-4 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2{% if modelState and modelState.hasError('email') %} border-red-500 focus-visible:ring-red-500{% endif %}" 
                placeholder="your.email@example.com"
              >
              {% if modelState and modelState.hasError('email') %}
              <div class="text-red-600 text-sm flex items-center gap-2">
                <span class="material-icons text-red-500 icon-sm">error</span>
                {{ modelState.getError('email') }}
              </div>
              {% endif %}
            </div>
          </div>

          <div class="space-y-2">
            <label for="subject" class="text-sm font-medium flex items-center gap-2">
              <span class="material-icons text-muted-foreground icon-sm">subject</span>
              Subject *
            </label>
            <input 
              type="text" 
              id="subject" 
              name="subject" 
              value="{{ formData.subject or '' }}" 
              class="flex h-12 w-full rounded-xl border border-input bg-background px-4 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2{% if modelState and modelState.hasError('subject') %} border-red-500 focus-visible:ring-red-500{% endif %}" 
              placeholder="What's this demo about?"
            >
            {% if modelState and modelState.hasError('subject') %}
            <div class="text-red-600 text-sm flex items-center gap-2">
              <span class="material-icons text-red-500 icon-sm">error</span>
              {{ modelState.getError('subject') }}
            </div>
            {% endif %}
          </div>

          <div class="space-y-2">
            <label for="message" class="text-sm font-medium flex items-center gap-2">
              <span class="material-icons text-muted-foreground icon-sm">message</span>
              Message *
            </label>
            <textarea 
              id="message" 
              name="message" 
              rows="6" 
              class="flex min-h-[150px] w-full rounded-xl border border-input bg-background px-4 py-3 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 resize-none{% if modelState and modelState.hasError('message') %} border-red-500 focus-visible:ring-red-500{% endif %}" 
              placeholder="Share your thoughts about ControllerTS framework..."
            >{{ formData.message or '' }}</textarea>
            {% if modelState and modelState.hasError('message') %}
            <div class="text-red-600 text-sm flex items-center gap-2">
              <span class="material-icons text-red-500 icon-sm">error</span>
              {{ modelState.getError('message') }}
            </div>
            {% endif %}
          </div>
          
          <!-- Error Summary -->
          {% if errors and errors.length > 0 %}
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex items-center gap-2 text-red-800 font-semibold mb-2">
              <span class="material-icons">error</span>
              Please correct the following errors:
            </div>
            <ul class="text-red-700 text-sm space-y-1">
              {% for error in errors %}
              <li>â€¢ {{ error }}</li>
              {% endfor %}
            </ul>
          </div>
          {% endif %}
          
          <button type="submit" class="w-full inline-flex items-center justify-center rounded-xl bg-primary px-8 py-4 text-base font-semibold text-primary-foreground shadow-lg transition-all duration-300 hover:bg-primary/90 hover:scale-105 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring">
            <span class="material-icons mr-3">send</span>
            Submit Demo Form
          </button>
        </form>
        
        {% if success %}
        <div class="mt-6">
          <div class="p-6 bg-green-50 border-2 border-green-200 rounded-xl">
            <div class="flex items-center gap-3">
              <span class="material-icons text-green-500 text-2xl">celebration</span>
              <div>
                <strong class="text-green-800 text-lg">Success!</strong>
                <p class="text-green-700 mt-1">{{ success }}</p>
              </div>
            </div>
          </div>
        </div>
        {% endif %}
      </div>
    </div>

    <!-- Navigation Demo -->
    <div class="rounded-2xl border bg-card shadow-sm overflow-hidden">
      <div class="border-b border-border bg-muted/50 px-6 py-4">
        <h3 class="text-xl font-semibold flex items-center gap-3">
          <span class="material-icons text-primary icon-lg">explore</span>
          Navigation Demo
        </h3>
      </div>
      <div class="p-6">
        <p class="text-muted-foreground mb-6 leading-relaxed">
          Test our client-side navigation system powered by the HTML5 History API. Experience smooth, fast page transitions without full page reloads.
        </p>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          <a href="/" class="inline-flex items-center justify-center rounded-xl border border-input bg-background px-4 py-6 text-sm font-medium shadow-sm transition-all duration-300 hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring flex-col gap-2">
            <span class="material-icons text-2xl">home</span>
            <span class="font-semibold">Home</span>
          </a>
          <a href="/home/about" class="inline-flex items-center justify-center rounded-xl border border-input bg-background px-4 py-6 text-sm font-medium shadow-sm transition-all duration-300 hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring flex-col gap-2">
            <span class="material-icons text-2xl">info</span>
            <span class="font-semibold">About</span>
          </a>
          <a href="/products" class="inline-flex items-center justify-center rounded-xl border border-input bg-background px-4 py-6 text-sm font-medium shadow-sm transition-all duration-300 hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring flex-col gap-2">
            <span class="material-icons text-2xl">inventory_2</span>
            <span class="font-semibold">Products</span>
          </a>
          <a href="/contact" class="inline-flex items-center justify-center rounded-xl border border-input bg-background px-4 py-6 text-sm font-medium shadow-sm transition-all duration-300 hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring flex-col gap-2">
            <span class="material-icons text-2xl">contact_mail</span>
            <span class="font-semibold">Contact</span>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Action Buttons -->
  <section class="text-center mt-20">
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <a href="/" class="inline-flex items-center justify-center rounded-xl border border-input bg-background px-6 py-3 text-sm font-medium shadow-sm transition-all duration-300 hover:bg-accent hover:text-accent-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring">
        <span class="material-icons mr-2 icon-sm">home</span>
        Back to Home
      </a>
      <a href="/home/about" class="inline-flex items-center justify-center rounded-xl bg-primary px-6 py-3 text-sm font-medium text-primary-foreground shadow-lg transition-all duration-300 hover:bg-primary/90 hover:scale-105 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring">
        <span class="material-icons mr-2 icon-sm">info</span>
        Learn More
      </a>
    </div>
  </section>
</div>

<style>
/* Professional button interaction feedback */
.btn:hover {
  transform: translateY(-1px);
}

.btn:active {
  transform: translateY(0);
}

/* Loading states for buttons */
.loading {
  position: relative;
  overflow: hidden;
}

.loading::after {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
  animation: shimmer 1.5s infinite;
}

@keyframes shimmer {
  0% { background-position: -200px 0; }
  100% { background-position: calc(200px + 100%) 0; }
}
</style>
</script>
{% endblock %}
