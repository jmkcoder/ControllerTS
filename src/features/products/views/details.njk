{% extends "shared/_base.njk" %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
<div class="container mx-auto px-4 py-12 space-y-12">
  <!-- Breadcrumb N          <div class="text-muted-foreground text-5xl group-hover:scale-110 transition-transform">
            <span class="material-icons text-muted-foreground" style="font-size: 3rem;">inventory_2</span>
          </div>vigation -->
  <nav class="flex" data-animate="animate-fade-in">
    <ol class="inline-flex items-center space-x-2 bg-muted/50 rounded-full px-6 py-3">
      <li class="inline-flex items-center">
        <a href="/" class="text-muted-foreground hover:text-primary transition-colors font-medium inline-flex items-center gap-2">
          <span class="material-icons icon-sm">home</span>
          Home
        </a>
      </li>
      <span class="material-icons text-muted-foreground icon-sm">chevron_right</span>
      <li class="inline-flex items-center">
        <a href="/products" class="text-muted-foreground hover:text-primary transition-colors font-medium inline-flex items-center gap-2">
          <span class="material-icons icon-sm">store</span>
          Products
        </a>
      </li>
      <span class="material-icons text-muted-foreground icon-sm">chevron_right</span>
      <li class="inline-flex items-center">
        <span class="text-primary font-semibold">{{ product.name }}</span>
      </li>
    </ol>
  </nav>

  <!-- Product Details -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
    <!-- Product Image -->
    <div data-animate="animate-slide-in-left">
      <div class="aspect-square bg-gradient-to-br from-muted/50 to-muted/30 rounded-2xl flex items-center justify-center shadow-lg hover:shadow-xl transition-all group relative overflow-hidden">
        <span class="material-icons text-muted-foreground/50 transition-all duration-300 group-hover:scale-110" style="font-size: 6rem;">
          {% if product.category == 'Electronics' %}headphones{% elif product.category == 'Furniture' %}chair{% elif product.category == 'Photography' %}camera_alt{% elif product.category == 'Appliances' %}coffee_maker{% else %}inventory_2{% endif %}
        </span>
        <div class="absolute inset-0 bg-gradient-to-br from-primary/10 to-secondary/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
        
        <!-- Image gallery indicators -->
        <div class="absolute bottom-6 left-1/2 transform -translate-x-1/2 flex space-x-3">
          <div class="w-3 h-3 bg-primary rounded-full shadow-sm"></div>
          <div class="w-3 h-3 bg-primary/30 rounded-full"></div>
          <div class="w-3 h-3 bg-primary/30 rounded-full"></div>
        </div>
      </div>
    </div>

    <!-- Product Information -->
    <div class="space-y-8" data-animate="animate-slide-in-right">
      <!-- Header Section -->
      <div class="space-y-6">
        <div class="space-y-4">
          <h1 class="text-4xl md:text-5xl font-bold bg-gradient-to-br from-primary to-primary/80 bg-clip-text text-transparent leading-tight">
            {{ product.name }}
          </h1>
          
          <div class="flex items-center gap-6 flex-wrap">
            <!-- Rating -->
            <div class="inline-flex items-center gap-2 bg-amber-50 px-4 py-2 rounded-full">
              <span class="material-icons text-amber-500 icon-md">star</span>
              <span class="font-semibold text-amber-700">{{ product.rating }}</span>
              <span class="text-amber-600/80 text-sm">/5</span>
            </div>
            
            <!-- Stock Status -->
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full {% if product.inStock %}bg-emerald-50{% else %}bg-red-50{% endif %}">
              <span class="material-icons {% if product.inStock %}text-emerald-600{% else %}text-red-600{% endif %} icon-sm">
                {% if product.inStock %}check_circle{% else %}cancel{% endif %}
              </span>
              <span class="font-medium {% if product.inStock %}text-emerald-700{% else %}text-red-700{% endif %}">
                {% if product.inStock %}In Stock{% else %}Out of Stock{% endif %}
              </span>
            </div>

            <!-- Category Badge -->
            <div class="inline-flex items-center gap-2 bg-secondary/50 px-4 py-2 rounded-full">
              <span class="material-icons text-muted-foreground icon-sm">category</span>
              <a href="/products/category/{{ product.category | lower }}" class="font-medium text-foreground hover:text-primary transition-colors">
                {{ product.category }}
              </a>
            </div>
          </div>
        </div>

        <!-- Description -->
        <div class="bg-muted/30 rounded-xl p-6">
          <p class="text-lg text-muted-foreground leading-relaxed">{{ product.description }}</p>
        </div>
      </div>

      <!-- Pricing and Actions -->
      <div class="space-y-6">
        <!-- Price Display -->
        <div class="relative overflow-hidden rounded-2xl bg-gradient-to-br from-primary to-primary/90 p-8 text-white">
          <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full -translate-y-16 translate-x-16"></div>
          <div class="relative z-10 space-y-2">
            <p class="text-primary-foreground/80 font-medium">Price</p>
            <div class="flex items-baseline gap-3">
              <span class="text-5xl font-bold">${{ product.price | number_format(2) }}</span>
              <span class="text-xl text-primary-foreground/80">USD</span>
            </div>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex gap-4">
          {% if product.inStock %}
          <button class="flex-1 inline-flex items-center justify-center rounded-xl bg-primary px-8 py-4 text-base font-semibold text-primary-foreground shadow-lg transition-all duration-300 hover:bg-primary/90 hover:scale-105 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring">
            <span class="material-icons mr-3">shopping_cart</span>
            Add to Cart
          </button>
          <button class="inline-flex items-center justify-center rounded-xl border-2 border-input bg-background px-4 py-4 text-base font-semibold shadow-sm transition-all duration-300 hover:bg-accent hover:text-accent-foreground hover:scale-105 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring">
            <span class="material-icons">favorite_border</span>
          </button>
          {% else %}
          <button class="flex-1 inline-flex items-center justify-center rounded-xl bg-muted px-8 py-4 text-base font-semibold text-muted-foreground cursor-not-allowed" disabled>
            <span class="material-icons mr-3">block</span>
            Out of Stock
          </button>
          {% endif %}
        </div>
      </div>

      <!-- Product Specifications -->
      <div class="rounded-xl border bg-card shadow-sm">
        <div class="border-b border-border bg-muted/50 px-6 py-4 rounded-t-xl">
          <h3 class="text-lg font-semibold flex items-center gap-3">
            <span class="material-icons text-primary icon-lg">info</span>
            Product Specifications
          </h3>
        </div>
        <div class="p-6 space-y-4">
          <div class="flex items-center justify-between py-3 border-b border-border/50 last:border-b-0">
            <div class="flex items-center gap-3">
              <span class="material-icons text-muted-foreground icon-md">category</span>
              <span class="font-medium text-muted-foreground">Category</span>
            </div>
            <a href="/products/category/{{ product.category | lower }}" class="inline-flex items-center gap-2 bg-primary/10 text-primary px-3 py-1 rounded-full text-sm font-medium hover:bg-primary/20 transition-colors">
              {{ product.category }}
              <span class="material-icons icon-sm">arrow_forward</span>
            </a>
          </div>
          <div class="flex items-center justify-between py-3 border-b border-border/50 last:border-b-0">
            <div class="flex items-center gap-3">
              <span class="material-icons text-muted-foreground icon-md">tag</span>
              <span class="font-medium text-muted-foreground">Product ID</span>
            </div>
            <span class="font-mono bg-muted/50 px-3 py-1 rounded-full text-sm">#{{ product.id }}</span>
          </div>
          <div class="flex items-center justify-between py-3 border-b border-border/50 last:border-b-0">
            <div class="flex items-center gap-3">
              <span class="material-icons text-muted-foreground icon-md">star</span>
              <span class="font-medium text-muted-foreground">Customer Rating</span>
            </div>
            <div class="flex items-center gap-2">
              <span class="font-semibold">{{ product.rating }}/5</span>
              <span class="text-muted-foreground text-sm">(Excellent)</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Enhanced Related Products -->
  {% if relatedProducts.length > 0 %}
  <div data-animate="animate-fade-in">
    <div class="text-center mb-12">
      <h2 class="text-4xl font-bold mb-4 bg-gradient-primary bg-clip-text text-transparent">Related Products</h2>
      <p class="text-lg text-muted-foreground">Discover more products you might like</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {% for related in relatedProducts %}
      <div class="card group hover:shadow-medium transition-all transform hover:scale-105 bg-gradient-secondary" data-animate="animate-fade-in">
        <div class="aspect-square bg-muted rounded-t-lg flex items-center justify-center relative overflow-hidden">
          <div class="text-muted-foreground text-5xl group-hover:scale-110 transition-transform">ï¿½</div>
          <div class="absolute inset-0 bg-gradient-primary opacity-0 group-hover:opacity-10 transition-opacity"></div>
        </div>
        
        <div class="card-content">
          <h3 class="font-bold text-lg mb-3 line-clamp-2 group-hover:text-primary transition-colors">{{ related.name }}</h3>
          <p class="text-muted-foreground text-sm mb-4 line-clamp-2 leading-relaxed">{{ related.description }}</p>
          
          <div class="flex justify-between items-center mb-4">
            <span class="text-2xl font-bold text-primary bg-gradient-primary bg-clip-text text-transparent">${{ related.price }}</span>
            <div class="flex items-center gap-1 bg-amber-50 px-2 py-1 rounded-full">
              <span class="material-icons text-amber-500 icon-sm">star</span>
              <span class="text-amber-700 text-sm font-medium">{{ related.rating }}</span>
            </div>
          </div>
          
          <a href="/products/{{ related.id }}" class="inline-flex items-center gap-2 text-primary font-medium hover:gap-3 transition-all">
            <span class="material-icons icon-sm">visibility</span>
            View Details
            <span class="material-icons icon-sm">arrow_forward</span>
          </a>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
  {% endif %}
</div>

<style>
.line-clamp-2 {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.bg-gradient-primary {
  background: linear-gradient(135deg, hsl(var(--primary)) 0%, hsl(var(--primary) / 0.8) 100%);
}

.bg-gradient-secondary {
  background: linear-gradient(135deg, hsl(var(--secondary)) 0%, hsl(var(--muted)) 100%);
}

.bg-clip-text {
  -webkit-background-clip: text;
  background-clip: text;
}

.text-transparent {
  color: transparent;
}

/* Image hover effects */
.group:hover .aspect-square {
  background: linear-gradient(135deg, hsl(var(--muted)) 0%, hsl(var(--accent)) 100%);
}

/* Enhanced button animations */
.btn:hover {
  transform: translateY(-2px);
}

/* Product details styling */
dl dt {
  min-width: fit-content;
}
</style>
{% endblock %}
