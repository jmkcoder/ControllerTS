{% extends "shared/_base.njk" %}

{% block title %}{{ statusCode or "500" }} - Server Error{% endblock %}

{% block content %}
<div style="text-align: center; padding: 50px 20px;">
  <div style="max-width: 600px; margin: 0 auto;">
    <h1 style="color: #e74c3c; font-size: 8em; margin: 0; font-weight: 300; line-height: 1;">
      {{ statusCode or "500" }}
    </h1>
    
    <h2 style="color: #2c3e50; margin: 30px 0 20px; font-size: 2em; font-weight: 300;">
      {{ message or "Internal Server Error" }}
    </h2>
    
    <p style="color: #7f8c8d; font-size: 1.2em; margin: 20px 0 40px; line-height: 1.6;">
      Something went wrong while processing your request. Please try again later.
    </p>
    
    <div style="margin: 40px 0;">
      <a href="javascript:location.reload()" style="
        display: inline-block;
        padding: 12px 30px;
        background: #f39c12;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1.1em;
        margin: 10px;
        transition: background 0.3s ease;
      " onmouseover="this.style.background='#e67e22'" onmouseout="this.style.background='#f39c12'">
        üîÑ Try Again
      </a>
      
      <a href="/" style="
        display: inline-block;
        padding: 12px 30px;
        background: #3498db;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        font-size: 1.1em;
        margin: 10px;
        transition: background 0.3s ease;
      " onmouseover="this.style.background='#2980b9'" onmouseout="this.style.background='#3498db'">
        ‚Üê Go Home
      </a>
    </div>
    
    {% if details and details.stack %}
    <details style="text-align: left; margin-top: 40px; padding: 20px; background: #f8f9fa; border-radius: 5px;">
      <summary style="cursor: pointer; font-weight: bold; color: #2c3e50;">Error Details (Development)</summary>
      <pre style="margin-top: 10px; color: #e74c3c; font-size: 0.85em; white-space: pre-wrap; background: #fff; padding: 15px; border-radius: 3px; border-left: 4px solid #e74c3c;">{{ details.stack }}</pre>
    </details>
    {% endif %}
  </div>
</div>
{% endblock %}

{% block scripts %}
<script>
// Add some interactivity for better UX
document.addEventListener('DOMContentLoaded', function() {
  // Auto-focus on try again button
  const tryAgainButton = document.querySelector('a[href="javascript:location.reload()"]');
  if (tryAgainButton) {
    tryAgainButton.focus();
  }
  
  // Add keyboard shortcut to reload (press R)
  document.addEventListener('keydown', function(e) {
    if (e.key === 'r' || e.key === 'R') {
      location.reload();
    } else if (e.key === 'h' || e.key === 'H') {
      window.location.href = '/';
    }
  });
});
</script>
{% endblock %}
