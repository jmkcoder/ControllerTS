{# User Card Partial - displays a single user's information #}
<div class="user-card" style="border: 1px solid #ddd; border-radius: 8px; padding: 15px; margin: 10px 0; background: #f9f9f9;">
  <div class="user-header" style="display: flex; align-items: center; margin-bottom: 10px;">
    <div class="user-avatar" style="width: 40px; height: 40px; border-radius: 50%; background: #007bff; color: white; display: flex; align-items: center; justify-content: center; margin-right: 10px;">
      {{ user.name[0] | upper }}
    </div>
    <div class="user-info">
      <h4 style="margin: 0; color: #333;">{{ user.name }}</h4>
      <p style="margin: 0; color: #666; font-size: 0.9em;">{{ user.email }}</p>
    </div>
  </div>
  
  {% if showDetails %}
    <div class="user-details" style="border-top: 1px solid #eee; padding-top: 10px; margin-top: 10px;">
      <p style="margin: 5px 0;"><strong>ID:</strong> {{ user.id }}</p>
      {% if user.phone %}
        <p style="margin: 5px 0;"><strong>Phone:</strong> {{ user.phone }}</p>
      {% endif %}
      {% if user.department %}
        <p style="margin: 5px 0;"><strong>Department:</strong> {{ user.department }}</p>
      {% endif %}
      {% if user.role %}
        <span class="role-badge" style="background: #28a745; color: white; padding: 3px 8px; border-radius: 12px; font-size: 0.8em;">{{ user.role }}</span>
      {% endif %}
    </div>
  {% endif %}
  
  {% if showActions %}
    <div class="user-actions" style="margin-top: 10px; text-align: right;">
      <button onclick="viewUser({{ user.id }})" style="background: #007bff; color: white; border: none; padding: 5px 10px; border-radius: 4px; margin-left: 5px; cursor: pointer;">View</button>
      <button onclick="editUser({{ user.id }})" style="background: #28a745; color: white; border: none; padding: 5px 10px; border-radius: 4px; margin-left: 5px; cursor: pointer;">Edit</button>
    </div>
  {% endif %}
</div>
