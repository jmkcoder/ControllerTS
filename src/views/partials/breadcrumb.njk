{# Navigation Breadcrumb Partial #}
<nav class="breadcrumb" style="background: #f8f9fa; padding: 10px 15px; border-radius: 4px; margin-bottom: 20px;">
  <ol style="list-style: none; padding: 0; margin: 0; display: flex; align-items: center;">
    <li style="margin-right: 10px;">
      <a href="/" style="color: #007bff; text-decoration: none;">🏠 Home</a>
    </li>
    {% for item in breadcrumbs %}
      <li style="margin: 0 10px; color: #6c757d;">›</li>
      <li style="margin-right: 10px;">
        {% if item.url and not loop.last %}
          <a href="{{ item.url }}" style="color: #007bff; text-decoration: none;">{{ item.title }}</a>
        {% else %}
          <span style="color: #6c757d;">{{ item.title }}</span>
        {% endif %}
      </li>
    {% endfor %}
  </ol>
</nav>
