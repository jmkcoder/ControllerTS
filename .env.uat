# UAT Environment Overrides
# Only contains values that differ from base .env

# Environment identifier
NODE_ENV=uat

# UAT-specific settings
DEBUG=false
LOG_LEVEL=warn
ENABLE_PERFORMANCE_MONITORING=true

# UAT API settings
API_BASE_URL=https://api-uat.example.com/api
API_TIMEOUT=8000
API_KEY=uat-api-key-secure-67890
API_VERSION=v1

# UAT features (testing new features)
FEATURE_BETA_FEATURES=true
FEATURE_ADVANCED_DEBUGGING=false
FEATURE_CONFIG_UPDATES=false

# UAT security (tighter than dev, looser than prod)
CORS_ORIGINS=https://uat.example.com,https://staging.example.com
ENABLE_CSRF_PROTECTION=true
HTTPS_ENFORCE=true

# UAT caching
ENABLE_CACHING=true
CACHE_TTL=600000

# UAT monitoring
ENABLE_ANALYTICS=true
ANALYTICS_PROVIDER=testing
ENABLE_ERROR_REPORTING=true
ERROR_REPORTING_ENDPOINT=https://errors-uat.example.com/api/errors

# UAT build settings
ENABLE_SOURCE_MAPS=true
MINIFY_OUTPUT=true

# UAT UI
CUSTOM_THEME=light
CUSTOM_WELCOME_MESSAGE="UAT Environment - Testing Mode"
